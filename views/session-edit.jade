extends ./layouts/default.jade
mixin row(arr)
    each box, index in arr
        .clip-box--clip= box

mixin block-party(arrs)
    each arr, index in arrs
        + row(arr)

block content
    - keyboard = ["qwertyuiop".split(''),"asdfghjkl;'".split(''),"zxcvbnm,,.".split('')]
    - midi = [[1, 2, 3, 4, 5, 6, 7, 50, 60, 67]]
    - phone = [[1, 2, 3, 4], [5, 6, 7, 8]]
    main.band
        section.container
            .row
                aside.side-nav
                    .side-nav--item
                        include ./includes/knob.jade
                    .side-nav--item
                        include ./includes/triangle.jade
                    .side-nav--item
                        include ./includes/rectangle.jade
                .col5.push1
                    .clip-box
                        + block-party(keyboard)
                    .clip-box
                        + block-party(phone)
                .col5.push6
                    .clip-box
                        + block-party(midi)
